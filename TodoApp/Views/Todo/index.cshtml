@model IEnumerable<TodoApp.Models.Todo>

<h2 class="text-3xl font-bold text-center mb-5">To-Do List</h2>

<p class="text-center mb-4">
    <a asp-action="Create" class="inline-block bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition">Create New</a>
</p>

<div class="overflow-x-auto">
    <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
        <thead class="bg-primary-700 text-white">
            <tr>
                <th class="py-3 px-4 text-left">Title</th>
                <th class="py-3 px-4 text-left">Description</th>
                <th class="py-3 px-4 text-left">Due Date</th>
                <th class="py-3 px-4 text-left">Is Completed</th>
                <th class="py-3 px-4 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="border-b hover:bg-gray-100">
                    <td class="py-2 px-4">@item.Title</td>
                    <td class="py-2 px-4">@item.Description</td>
                    <td class="py-2 px-4">@item.DueDate.ToShortDateString()</td>
                    <td class="py-2 px-4">@item.IsCompleted</td>
                    <td class="py-2 px-4">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-600 hover:underline">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-600 hover:underline">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:underline">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
