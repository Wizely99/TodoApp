@model TodoApp.Models.Todo

@{
    ViewData["Title"] = "Create Todo";
}

<h1>Create a New Todo</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DueDate" class="control-label"></label>
        <input asp-for="DueDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsCompleted" class="control-label"></label>
        <input asp-for="IsCompleted" class="form-control" type="checkbox" />
        <span asp-validation-for="IsCompleted" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Back to Todo List</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
