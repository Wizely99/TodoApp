@model TodoApp.Models.Todo

@{
    ViewData["Title"] = "Todo Details";
}

<h1 class="text-3xl font-bold mb-6">Todo Details</h1>

@if (Model != null)
{
    <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-2xl font-semibold mb-2">@Model.Title</h2>

        <p class="flex items-center mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h18v18H3z" />
            </svg>
            <strong>Description:</strong> @Model.Description
        </p>

        <p class="flex items-center mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <strong>Created At:</strong> @Model.DueDate.ToString("g")
        </p>

        <p class="flex items-center mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M12 4v1m0 15v1m0-18h1m-1 18h-1" />
            </svg>
            <strong>Due Date:</strong> @Model.DueDate.ToString("g")
        </p>

        <p class="flex items-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 @((Model.IsCompleted ? "text-green-600" : "text-red-600")) mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="@(Model.IsCompleted 
                        ? "M9 12l2 2 4-4m2-1H7a2 2 0 00-2 2v2a2 2 0 002 2h12a2 2 0 002-2v-2a2 2 0 00-2-2z" 
                        : "M12 8v4m0 4h.01M12 4v1m0 15v1m0-18h1m-1 18h-1")" />
            </svg>
            <strong>Status:</strong> @(Model.IsCompleted ? "Completed" : "Not Completed")
        </p>

        <a asp-controller="Todo" asp-action="Index" class="text-blue-600 hover:underline">Back to List</a>
    </div>
}
else
{
    <p>No todo details available.</p>
}
